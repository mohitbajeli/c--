#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *next;
};
void print(struct node *ptr);
int main()
{
  struct node *head,*temp,*newnode;
  head=0;
  int choice;
  while(choice)
  {
      newnode=(struct node *)malloc(sizeof(struct node));
      printf("enter the data\n");
      scanf("%d",&newnode->data);
      newnode->next=NULL;
      if(head==0)
      {
          head=temp=newnode;
      }
      else
      {
          temp->next=newnode;
          temp=newnode;
      }
      printf("do you want to continue\n");
      scanf("%d",&choice);
  }
  printf("the linklist is\n");
  print(head);
  temp=head;
  newnode=(struct node *)malloc(sizeof(struct node));
  printf("enter the new data\n");
  scanf("%d",&newnode->data);
  newnode->next=NULL;
  newnode->next=temp;
  head=newnode;
  printf("the linklist after inserting\n");
  print(head);
  return 0;
}


 void print(struct node *ptr){
  while(ptr!=0)
  {
      printf("%d\n",ptr->data);
      ptr=ptr->next;
  }
 }
